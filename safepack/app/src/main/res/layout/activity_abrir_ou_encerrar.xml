<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373599"
    android:orientation="vertical"
    tools:context=".activity.AbrirOuEncerrarActivity">

    <Button
        android:id="@+id/sairButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="285dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/lavander"
        android:text="Sair"
        app:cornerRadius="15dp"
        android:fontFamily="@font/montserratsemibold"
        android:textAllCaps="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="20dp">


        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Encerrar locação"
            android:id="@+id/encerrarLocacaoButton"
            android:textSize="18sp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/lavander"
            app:cornerRadius = "15dp"
            android:fontFamily="@font/montserratsemibold"
            android:textAllCaps="false"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Abrir temporariamente"
            android:id="@+id/duasPessoasButton"
            android:textSize="18sp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/lavander"
            app:cornerRadius = "15dp"
            android:fontFamily="@font/montserratsemibold"
            android:textAllCaps="false"/>
    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>