<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QrCodeActivity"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/logo_mochila" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reserva realizada com sucesso!"
        android:textSize="35dp"
        android:textAlignment="center"
        android:fontFamily="@font/montserratbold"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tvGerente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Para finalizar a locação, mostre o código ao gerente "
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:fontFamily="@font/montserratmedium"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="35dp">

        <ImageView
            android:id="@+id/imageQRCode"
            android:layout_width="800px"
            android:layout_height="800px"
            android:scaleType="centerInside" />

    </LinearLayout>

    <Button
        android:id="@+id/irAoLocalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/lavander"
        android:text="Avançar"
        android:textSize="18dp"
        app:cornerRadius = "8dp"
        android:fontFamily="@font/montserratsemibold"
        android:textAllCaps="false"/>


</androidx.appcompat.widget.LinearLayoutCompat>