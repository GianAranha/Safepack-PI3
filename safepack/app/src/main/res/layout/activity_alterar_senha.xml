<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/background_with_small_gradient"
    tools:context=".CadastroActivity"
    android:layout_gravity="center_horizontal"
    android:padding="25dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_keyboard_backspace_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alteração de senha"
            android:id="@+id/cadastroText"
            android:textSize="36dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black" />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/senha"
            android:layout_marginTop="70dp"
            android:padding="8dp"
            android:hint="Nova Senha"
            android:drawableLeft="@drawable/baseline_lock_outline_24"
            android:textColor="@color/black"
            android:drawablePadding="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/senhaConfirmacao"
            android:layout_marginTop="20dp"
            android:padding="8dp"
            android:hint="Confirmar senha"
            android:drawableLeft="@drawable/baseline_lock_outline_24"
            android:textColor="@color/black"
            android:drawablePadding="8dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="alterar senha"
            android:id="@+id/alterarSenhaButton"
            android:textSize="18dp"
            android:layout_marginTop="70dp"
            android:backgroundTint="@color/lavander"
            app:cornerRadius = "15dp"/>
        </LinearLayout>

</LinearLayout>