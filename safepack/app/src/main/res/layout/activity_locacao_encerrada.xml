<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#373599"
    tools:context=".activity.LocacaoEncerradaActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/logo_mochila"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Locacão encerrada com sucesso"
        android:textColor="@color/white"
        android:fontFamily="@font/montserratbold"
        android:textSize="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:textSize="20dp"
        android:text="Agora seu armário está pronto para receber novos clientes!"
        android:layout_marginHorizontal="40dp"
        android:fontFamily="@font/montserratmedium"
        android:textColor="@color/white"
        android:gravity="center"/>

    <Button
        android:id="@+id/voltarMenuButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="150dp"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/lavander"
        android:text="Voltar ao menu principal"
        android:textSize="18sp"
        app:cornerRadius = "15dp"
        android:fontFamily="@font/montserratsemibold"
        android:textAllCaps="false"/>

</androidx.appcompat.widget.LinearLayoutCompat>